{{!-- Layout for all pages --}}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{{title}} | Jane Doe Portfolio</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Google Font: Space Grotesk -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Ionic Core CSS (for chips, etc.) -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@ionic/core/css/ionic.bundle.css"
    />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body>

    {{!-- ==========================================
         MAIN NAVBAR (Bootstrap, works on all sizes)
         ========================================== --}}
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container">
        <a class="navbar-brand" href="/">Jane Doe Portfolio</a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#mainNav"
          aria-controls="mainNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNav">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/about">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/projects">Projects</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/contact">Contact</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    {{!-- ==========================================
         HERO GLOW STRIP
         ========================================== --}}
    <div class="hero-strip">
      <div class="container hero-strip-inner">
        <a href="/contact" class="status-pill status-pill-link">
          <span class="status-dot"></span>
          <span>Online &amp; open to opportunities</span>
        </a>
      </div>
    </div>

    {{!-- ==========================================
         MAIN CONTENT
         ========================================== --}}
    <main class="site-main py-4">
      <div class="container">
        {{{body}}}
      </div>
    </main>

    {{!-- ==========================================
         FOOTER
         ========================================== --}}
    <footer class="py-3 mt-auto position-relative footer-glow">
      <div class="container text-center">
        <small>
          © {{year}} Jane Doe —
          <a href="https://github.com/janedoe" target="_blank" rel="noopener">GitHub</a> ·
          <a href="https://www.linkedin.com/in/jane-doe" target="_blank" rel="noopener">
            LinkedIn
          </a>
        </small>
      </div>
    </footer>

    <!-- Bootstrap JS (includes Popper for navbar/menu) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Ionic JS (for chips & other Ionic components) -->
    <script
      type="module"
      src="https://cdn.jsdelivr.net/npm/@ionic/core/dist/ionic/ionic.esm.js">
    </script>
    <script
      nomodule
      src="https://cdn.jsdelivr.net/npm/@ionic/core/dist/ionic/ionic.js">
    </script>

    <!-- Projects filter logic -->
    <script src="/javascripts/projects-filter.js"></script>
  </body>
</html>
