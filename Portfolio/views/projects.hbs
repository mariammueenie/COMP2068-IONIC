<h1 class="page-title mb-4">Projects</h1>

<p class="mb-4">
  Explore Jane Doeâ€™s portfolio. Use the filters below to narrow projects
  by language, concept, or project type. All filtering is powered by 
  Ionic chips and smooth JavaScript animations.
</p>

<!-- ===============================
     FILTERS: LANGUAGES
     =============================== -->
<section class="mb-4">
  <h5 class="mb-3">Filter by Language</h5>
  <ion-chip class="filter-chip" data-filter="language" data-value="JavaScript">
    JavaScript
  </ion-chip>
  <ion-chip class="filter-chip" data-filter="language" data-value="HTML">
    HTML
  </ion-chip>
  <ion-chip class="filter-chip" data-filter="language" data-value="CSS">
    CSS
  </ion-chip>
</section>

<!-- ===============================
     FILTERS: CONCEPTS
     =============================== -->
<section class="mb-4">
  <h5 class="mb-3">Filter by Concept</h5>
  <ion-chip class="filter-chip" data-filter="concept" data-value="REST API">
    REST API
  </ion-chip>
  <ion-chip class="filter-chip" data-filter="concept" data-value="Forms">
    Forms
  </ion-chip>
  <ion-chip class="filter-chip" data-filter="concept" data-value="Animations">
    Animations
  </ion-chip>
</section>

<!-- ===============================
     FILTERS: PROJECT TYPE
     =============================== -->
<section class="mb-4">
  <h5 class="mb-3">Filter by Type</h5>
  <ion-chip class="filter-chip" data-filter="type" data-value="Frontend">
    Frontend
  </ion-chip>
  <ion-chip class="filter-chip" data-filter="type" data-value="Backend">
    Backend
  </ion-chip>
  <ion-chip class="filter-chip" data-filter="type" data-value="Fullstack">
    Fullstack
  </ion-chip>
</section>

<!-- ===============================
     PROJECT LIST
     =============================== -->
<ul id="project-list">
  {{#each projects}}
    <li
      class="project-item"
      data-languages="{{join this.languages ','}}"
      data-concepts="{{join this.concepts ','}}"
      data-type="{{join this.type ','}}"
    >
      <h5 class="mb-1">{{this.name}}</h5>
      <p>{{this.description}}</p>

      <a
        class="btn btn-sm btn-primary mt-2"
        href="https://github.com/mariammueenie/COMP2068-IONIC/tree/main/Portfolio"
        target="_blank"
        rel="noopener"
      >
        View Project
      </a>

      <div class="small text-muted mt-3">
        <strong>Languages:</strong>
        {{#each this.languages}}
          <span class="badge bg-secondary me-1">{{this}}</span>
        {{/each}}
      </div>

      <div class="small text-muted mt-2">
        <strong>Concepts:</strong>
        {{#each this.concepts}}
          <span class="badge bg-info me-1">{{this}}</span>
        {{/each}}
      </div>

      <div class="small text-muted mt-2">
        <strong>Type:</strong>
        {{#each this.type}}
          <span class="badge bg-dark me-1">{{this}}</span>
        {{/each}}
      </div>
    </li>
  {{/each}}
</ul>
